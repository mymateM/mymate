<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="41dp"
        android:layout_height="41dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="26dp"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/icon_circlebtndefault"
        android:id="@+id/spendingCategory"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/spendingCategory"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="7dp"
        android:layout_marginTop="3dp"
        android:text="00,000원"
        android:textSize="14dp"
        android:fontFamily="@font/suit_bold"
        android:textColor="@color/black_text"
        android:id="@+id/spendingAmount"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/spendingCategory"
        app:layout_constraintTop_toBottomOf="@id/spendingAmount"
        android:layout_marginStart="7dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/suit_semibold"
        android:textSize="10dp"
        android:text="다이소"
        android:textColor="@color/graydark_text"
        android:id="@+id/spendingStore"
        />

    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="7dp"
        android:src="@drawable/icon_defaultcircle"
        android:id="@+id/spendingProfileStart"/>
</androidx.constraintlayout.widget.ConstraintLayout>