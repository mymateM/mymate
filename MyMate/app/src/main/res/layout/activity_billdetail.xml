<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ImageButton
        android:layout_width="9dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        android:background="@android:color/transparent"
        android:src="@drawable/back"
        android:scaleType="fitCenter"
        android:id="@+id/backbtn"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/suit_medium"
        android:textSize="14dp"
        android:textColor="@color/graydark_text"
        android:text="수정"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="81dp"
        android:id="@+id/detailgraphic"
        android:scaleType="centerInside"
        android:src="@drawable/cash"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detailgraphic"
        app:layout_constraintStart_toStartOf="@id/detailgraphic"
        app:layout_constraintEnd_toEndOf="@id/detailgraphic"
        android:layout_marginTop="22dp"
        android:textColor="@color/black_text"
        android:textSize="18dp"
        android:fontFamily="@font/suit_medium"
        android:text="납부 금액"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/detailgraphic"
        app:layout_constraintEnd_toEndOf="@id/detailgraphic"
        app:layout_constraintTop_toBottomOf="@id/detailgraphic"
        android:layout_marginTop="58dp"
        android:text="000,000원"
        android:textSize="30dp"
        android:textColor="@color/black_text"
        android:fontFamily="@font/montserrat_bold"
        android:id="@+id/billamount"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        app:layout_constraintTop_toBottomOf="@id/billamount"
        android:layout_marginTop="58dp"
        android:src="@drawable/icon_defaultrectangle"
        android:id="@+id/devider"
        app:tint="@color/graylight_buttonfill"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/devider"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/black_text"
        android:textSize="18dp"
        android:text="고지서"
        android:fontFamily="@font/suit_medium"
        android:id="@+id/category"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/category"
        android:layout_marginStart="20dp"
        android:text="카테고리"
        android:textSize="18dp"
        android:textColor="@color/black_text"
        android:fontFamily="@font/suit_medium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/category"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="42dp"
        android:textColor="@color/black_text"
        android:textSize="18dp"
        android:text="2022.6.30"
        android:fontFamily="@font/suit_medium"
        android:id="@+id/duedate"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/duedate"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:text="납부 기한"
        android:textSize="18dp"
        android:textColor="@color/black_text"
        android:fontFamily="@font/suit_medium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/duedate"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="42dp"
        android:text="와우 불 끄고 다녀야할듯"
        android:textSize="18dp"
        android:textColor="@color/black_text"
        android:fontFamily="@font/suit_medium"
        android:id="@+id/memo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/memo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:textColor="@color/black_text"
        android:textSize="18dp"
        android:text="메모"
        android:fontFamily="@font/suit_medium"/>

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toTopOf="@id/enrolldate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/icon_defaultcircle"
        android:layout_marginBottom="22dp"
        android:id="@+id/deletebtn"/>

    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:layout_constraintStart_toStartOf="@id/deletebtn"
        app:layout_constraintEnd_toEndOf="@id/deletebtn"
        app:layout_constraintTop_toTopOf="@id/deletebtn"
        app:layout_constraintBottom_toBottomOf="@id/deletebtn"
        android:scaleType="centerInside"
        android:src="@drawable/remove"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="66dp"
        android:text="00년 0월 00일 등록"
        android:textSize="16dp"
        android:textColor="@color/graylight_text"
        android:fontFamily="@font/suit_medium"
        android:id="@+id/enrolldate"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/deletepopup"
        android:visibility="gone">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/cover"
            android:src="@color/modalecover"/>
        <ImageView
            android:layout_width="255dp"
            android:layout_height="292dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/icon_defaultrectangle"
            android:scaleType="centerInside"
            android:id="@+id/popupcontainer"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/popupcontainer"
            app:layout_constraintStart_toStartOf="@id/popupcontainer"
            app:layout_constraintEnd_toEndOf="@id/popupcontainer"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/suit_bold"
            android:textColor="@color/black_text"
            android:text="정말 삭제하시겠어요?"
            android:textSize="18dp"
            android:id="@+id/popuptitle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/popuptitle"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/suit_medium"
            android:textSize="14dp"
            android:text="삭제 버튼 선택 시, 선택한 고지서가\n삭제되며 복구되지 않습니다"
            android:gravity="center"
            android:textColor="@color/graydark_text"
            android:id="@+id/popupdesc"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/popupcontainer"
            app:layout_constraintEnd_toEndOf="@id/popupcontainer"
            app:layout_constraintTop_toBottomOf="@id/popupdesc"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="31dp"
            android:layout_marginStart="31dp"
            android:background="@drawable/button_loginbarselected"
            android:text="삭제"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:fontFamily="@font/suit_bold"
            android:id="@+id/deleteconfirm"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/popupcontainer"
            app:layout_constraintStart_toStartOf="@id/popupcontainer"
            app:layout_constraintTop_toBottomOf="@id/deleteconfirm"
            android:layout_marginTop="15dp"
            android:textSize="14dp"
            android:textColor="@color/graylight_text"
            android:text="취소"
            android:fontFamily="@font/suit_bold"
            android:id="@+id/dismiss"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>