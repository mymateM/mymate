<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:layout_width="6dp"
        android:layout_height="11dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:background="@android:color/transparent"
        android:src="@drawable/back"
        android:scaleType="fitCenter"
        android:id="@+id/backbtn"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:text="고지서"
        android:fontFamily="@font/suit_bold"
        android:textSize="14.4dp"
        android:textColor="@color/black_text"
        android:id="@+id/title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/title"
        app:layout_constraintBottom_toBottomOf="@id/title"
        android:layout_marginEnd="9.6dp"
        android:text="수정"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginStart="16dp"
        android:text="23.6.11 (일)"
        android:textSize="13dp"
        android:textColor="@color/black_text"
        android:fontFamily="@font/suit_semibold"
        android:id="@+id/enrolldate"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/enrolldate"
        app:layout_constraintStart_toStartOf="@id/enrolldate"
        android:layout_marginTop="24dp"
        android:textColor="@color/black_text"
        android:textSize="13dp"
        android:fontFamily="@font/suit_semibold"
        android:text="금액"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/enrolldate"
        app:layout_constraintTop_toBottomOf="@id/enrolldate"
        android:layout_marginTop="46dp"
        android:text="000,000원"
        android:textSize="25.6dp"
        android:textColor="@color/black_text"
        android:fontFamily="@font/montserrat_bold"
        android:id="@+id/billamount"/>

    <ImageView
        android:layout_width="33.6dp"
        android:layout_height="48.8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="17dp"
        android:id="@+id/billimage"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        app:layout_constraintTop_toBottomOf="@id/billamount"
        android:layout_marginTop="28dp"
        android:src="@drawable/icon_defaultrectangle"
        android:id="@+id/devider"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/devider"
        android:layout_marginTop="25.6dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/black_text"
        android:textSize="13dp"
        android:text="거래처"
        android:fontFamily="@font/suit_semibold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/devider"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25.6dp"
        android:layout_marginEnd="16dp"
        android:text="예스코"
        android:textSize="13dp"
        android:textColor="@color/black_text"
        android:fontFamily="@font/suit_semibold"
        android:id="@+id/company"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/company"
        android:layout_marginTop="38.4dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/black_text"
        android:textSize="13dp"
        android:text="고지서"
        android:fontFamily="@font/suit_semibold"
        android:id="@+id/category"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/category"
        android:layout_marginStart="16dp"
        android:text="카테고리"
        android:textSize="13dp"
        android:textColor="@color/black_text"
        android:fontFamily="@font/suit_semibold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/category"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="38.4dp"
        android:textColor="@color/black_text"
        android:textSize="13dp"
        android:text="2022.6.30"
        android:fontFamily="@font/suit_semibold"
        android:id="@+id/duedate"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/duedate"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:text="납부기한"
        android:textSize="13dp"
        android:textColor="@color/black_text"
        android:fontFamily="@font/suit_semibold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/duedate"
        android:layout_marginTop="38.4dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/black_text"
        android:textSize="13dp"
        android:text="000000000000"
        android:fontFamily="@font/suit_semibold"
        android:id="@+id/accountNumber"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/accountNumber"
        app:layout_constraintTop_toTopOf="@id/accountNumber"
        android:layout_marginEnd="16dp"
        android:text="농협"
        android:textSize="13dp"
        android:textColor="@color/black_text"
        android:fontFamily="@font/suit_semibold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/accountNumber"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:textColor="@color/black_text"
        android:textSize="13dp"
        android:text="가상계좌"
        android:fontFamily="@font/suit_semibold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/accountNumber"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="38.4dp"
        android:text="와우 불 끄고 다녀야할듯"
        android:textSize="13dp"
        android:textColor="@color/black_text"
        android:fontFamily="@font/suit_semibold"
        android:id="@+id/memo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/memo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:textColor="@color/black_text"
        android:textSize="13dp"
        android:text="메모"
        android:fontFamily="@font/suit_semibold"/>

</androidx.constraintlayout.widget.ConstraintLayout>