<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ImageButton
        android:layout_width="9dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        android:background="@android:color/transparent"
        android:src="@drawable/back"
        android:scaleType="fitCenter"
        android:id="@+id/backbtn"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="22dp"
        android:text="도시가스"
        android:fontFamily="@font/suit_bold"
        android:textSize="18dp"
        android:textColor="@color/black_text"
        android:id="@+id/title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/title"
        app:layout_constraintBottom_toBottomOf="@id/title"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/suit_medium"
        android:textSize="14dp"
        android:textColor="@color/graydark_text"
        android:text="삭제"
        android:id="@+id/deletebtn"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deleteall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deletebtn"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:textSize="14dp"
        android:textColor="@color/graydark_text"
        android:text="전체선택"
        android:fontFamily="@font/suit_medium"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/deleteall"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/billListcontainer"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/deletepopup"
        android:visibility="gone">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/cover"
            android:src="@color/modalecover"/>
        <ImageView
            android:layout_width="255dp"
            android:layout_height="292dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/icon_defaultrectangle"
            android:scaleType="centerInside"
            android:id="@+id/popupcontainer"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/popupcontainer"
            app:layout_constraintStart_toStartOf="@id/popupcontainer"
            app:layout_constraintEnd_toEndOf="@id/popupcontainer"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/suit_bold"
            android:textColor="@color/black_text"
            android:text="정말 삭제하시겠어요?"
            android:textSize="18dp"
            android:id="@+id/popuptitle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/popuptitle"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/suit_medium"
            android:textSize="14dp"
            android:text="삭제 버튼 선택 시, 선택한 고지서가\n삭제되며 복구되지 않습니다"
            android:gravity="center"
            android:textColor="@color/graydark_text"
            android:id="@+id/popupdesc"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/popupcontainer"
            app:layout_constraintEnd_toEndOf="@id/popupcontainer"
            app:layout_constraintTop_toBottomOf="@id/popupdesc"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="31dp"
            android:layout_marginStart="31dp"
            android:background="@drawable/button_loginbarselected"
            android:text="삭제"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:fontFamily="@font/suit_bold"
            android:id="@+id/deleteconfirm"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/popupcontainer"
            app:layout_constraintStart_toStartOf="@id/popupcontainer"
            app:layout_constraintTop_toBottomOf="@id/deleteconfirm"
            android:layout_marginTop="15dp"
            android:textSize="14dp"
            android:textColor="@color/graylight_text"
            android:text="취소"
            android:fontFamily="@font/suit_bold"
            android:id="@+id/dismiss"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>