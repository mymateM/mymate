<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settlementdayview"
    android:background="@color/white">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="6dp"
        app:layout_constraintTop_toBottomOf="@id/backbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/onboardIndi2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/graph_graybackground"
        app:tint="@color/purpleblue_select"
        android:id="@+id/onboardIndi1"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:id="@+id/onboardIndi2"
        app:layout_constraintTop_toTopOf="@id/onboardIndi1"
        app:layout_constraintStart_toEndOf="@id/onboardIndi1"
        app:layout_constraintBottom_toBottomOf="@id/onboardIndi1"
        app:layout_constraintEnd_toStartOf="@id/onboardIndi3"
        android:layout_marginStart="7dp"
        android:src="@drawable/graph_graybackground"
        app:tint="@color/purpleblue_select"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:id="@+id/onboardIndi3"
        app:layout_constraintTop_toTopOf="@id/onboardIndi2"
        app:layout_constraintStart_toEndOf="@id/onboardIndi2"
        app:layout_constraintBottom_toBottomOf="@id/onboardIndi2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="7dp"
        android:src="@drawable/graph_graybackground"
        app:tint="@color/purpleblue_select"/>

    <ImageView
        android:layout_width="9dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/backbtn"
        android:src="@drawable/back"
        android:scaleType="fitCenter"/>
    
    <ImageView
        android:layout_width="100dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toBottomOf="@id/onboardIndi2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="78dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/box_radius12"
        android:backgroundTint="@color/purpleblue_selectlight"
        android:id="@+id/householdmark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/householdmark"
        app:layout_constraintTop_toTopOf="@id/householdmark"
        app:layout_constraintEnd_toEndOf="@id/householdmark"
        app:layout_constraintBottom_toBottomOf="@id/householdmark"
        android:text="가계부 설정"
        android:textColor="@color/purpleblue_select"
        android:fontFamily="@font/suit_semibold"
        android:textSize="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="200dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black_text"
        android:textSize="22dp"
        android:text="돈을 정산하고 싶은\n날짜를 선택해 주세요"
        android:fontFamily="@font/happiness_sans_title"
        android:id="@+id/topText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topText"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:textSize="16dp"
        android:text="매달 정산이 이루어지는 날이에요."
        android:fontFamily="@font/suit_regular"
        android:textColor="@color/graydark_text"
        android:id="@+id/subText"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="104dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subText"
        app:layout_constraintEnd_toStartOf="@id/settleDay15"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/settleDay1"
        android:src="@drawable/button_selectbox"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/settleDay1"
        app:layout_constraintEnd_toEndOf="@id/settleDay1"
        app:layout_constraintTop_toTopOf="@id/settleDay1"
        app:layout_constraintBottom_toBottomOf="@id/settleDay1"
        android:text="1일"
        android:textColor="@color/graylight_text"
        android:fontFamily="@font/suit_semibold"
        android:textSize="20dp"
        android:id="@+id/settleDay1Text"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="104dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subText"
        app:layout_constraintStart_toEndOf="@id/settleDay1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/settleDay15"
        android:src="@drawable/button_selectbox"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/settleDay15"
        app:layout_constraintEnd_toEndOf="@id/settleDay15"
        app:layout_constraintTop_toTopOf="@id/settleDay15"
        app:layout_constraintBottom_toBottomOf="@id/settleDay15"
        android:text="15일"
        android:textColor="@color/graylight_text"
        android:fontFamily="@font/suit_semibold"
        android:textSize="20dp"
        android:id="@+id/settleDay15Text"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="104dp"
        app:layout_constraintStart_toStartOf="@id/settleDay1"
        app:layout_constraintTop_toBottomOf="@id/settleDay1"
        app:layout_constraintEnd_toEndOf="@id/settleDay1"
        android:layout_marginTop="13dp"
        android:id="@+id/settleDayEnd"
        android:src="@drawable/button_selectbox"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/settleDayEnd"
        app:layout_constraintEnd_toEndOf="@id/settleDayEnd"
        app:layout_constraintTop_toTopOf="@id/settleDayEnd"
        app:layout_constraintBottom_toTopOf="@id/settleTextEnddesc"
        app:layout_constraintVertical_chainStyle="packed"
        android:text="말일"
        android:textColor="@color/graylight_text"
        android:fontFamily="@font/suit_semibold"
        android:textSize="20dp"
        android:id="@+id/settleTextEnd"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/settleDayEnd"
        app:layout_constraintEnd_toEndOf="@id/settleDayEnd"
        app:layout_constraintTop_toBottomOf="@id/settleTextEnd"
        app:layout_constraintBottom_toBottomOf="@id/settleDayEnd"
        android:text="매달 마지막 날"
        android:textColor="@color/graylight_text"
        android:fontFamily="@font/suit_medium"
        android:textSize="12dp"
        android:id="@+id/settleTextEnddesc"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="104dp"
        app:layout_constraintStart_toStartOf="@id/settleDay15"
        app:layout_constraintTop_toBottomOf="@id/settleDay15"
        app:layout_constraintEnd_toEndOf="@id/settleDay15"
        android:layout_marginTop="13dp"
        android:id="@+id/settleDayEdit"
        android:src="@drawable/button_selectbox"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/settleDayEdit"
        app:layout_constraintEnd_toEndOf="@id/settleDayEdit"
        app:layout_constraintTop_toTopOf="@id/settleDayEdit"
        app:layout_constraintBottom_toBottomOf="@id/settleDayEdit"
        android:id="@+id/settleDayEditText"
        android:backgroundTint="@color/graydark_text"
        android:hint="직접입력"
        android:textColor="@color/purpleblue_select"
        android:fontFamily="@font/suit_semibold"
        android:textColorHint="@color/graylight_text"
        android:textSize="18dp"
        android:gravity="center"
        android:maxLength="2"
        android:maxLines="1"
        android:inputType="number"
        android:digits="0123456789"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/settleDayEditText"
        app:layout_constraintTop_toTopOf="@id/settleDayEditText"
        app:layout_constraintBottom_toBottomOf="@id/settleDayEditText"
        android:layout_marginBottom="1dp"
        android:textColor="@color/graylight_text"
        android:fontFamily="@font/suit_semibold"
        android:textSize="18dp"
        android:text="일"
        android:id="@+id/dayText"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/box_noradius"
        android:backgroundTint="@color/graylight_wireframe"
        android:text="다음으로"
        android:textColor="@color/white"
        android:fontFamily="@font/suit_bold"
        android:textSize="16dp"
        android:id="@+id/nextbtn"/>

</androidx.constraintlayout.widget.ConstraintLayout>