<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alarmlistunit">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/profileimg"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="41dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/basicprofile"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarmname"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="21dp"
        android:text="username"
        android:textSize="12dp"
        android:fontFamily="@font/suit_semibold_apply"
        android:textColor="@color/graydark_alarm"
        app:layout_constraintStart_toEndOf="@id/profileimg"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarmdesc"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"
        android:text="userdesc"
        android:textColor="@color/blackmute_text"
        android:textSize="15dp"
        android:fontFamily="@font/suit_regular_apply"
        app:layout_constraintBottom_toBottomOf="@id/profileimg"
        app:layout_constraintStart_toEndOf="@id/profileimg"
        app:layout_constraintTop_toBottomOf="@id/alarmname"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarmtime"
        android:text="alarmtime"
        android:textColor="@color/blackmute_text_50p"
        android:fontFamily="@font/suit_regular_apply"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@id/alarmdesc"
        app:layout_constraintStart_toEndOf="@id/profileimg"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="7dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>