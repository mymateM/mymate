<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:id="@+id/toppanel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/alarmtab"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:layout_width="8.89dp"
            android:layout_height="16dp"
            android:id="@+id/alarmdissmiss"
            app:layout_constraintStart_toStartOf="@id/toppanel"
            app:layout_constraintTop_toTopOf="@id/toppanel"
            app:layout_constraintBottom_toBottomOf="@id/toppanel"
            android:layout_marginStart="20dp"
            android:src="@drawable/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/toppanel"
            app:layout_constraintStart_toStartOf="@id/toppanel"
            app:layout_constraintEnd_toEndOf="@id/toppanel"
            app:layout_constraintBottom_toBottomOf="@id/toppanel"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:fontFamily="@font/suit_extrabold_apply"
            android:text="알림"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/alarmtab"
        app:layout_constraintBottom_toTopOf="@id/alarmpager"
        app:layout_constraintTop_toBottomOf="@id/toppanel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tabSelectedTextColor="@color/purple_text"
        app:tabTextColor="@color/graylight_tabtext"
        app:tabIndicatorColor="@color/purple_text"
        app:tabIndicatorGravity="bottom"
        app:tabBackground="@drawable/tab_unselectedindicator"
        app:tabTextAppearance="@style/tabview_alarmtextstlye">
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/alarmpager"
        app:layout_constraintTop_toBottomOf="@id/alarmtab"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>