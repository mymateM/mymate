<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="13.6dp"
        android:id="@+id/monthText"
        android:text="0월"
        android:fontFamily="@font/suit_bold"
        android:textSize="16dp"
        android:textColor="@color/black_text"/>

    <ImageButton
        android:layout_width="8dp"
        android:layout_height="8dp"
        app:layout_constraintEnd_toStartOf="@id/monthText"
        app:layout_constraintTop_toTopOf="@id/monthText"
        app:layout_constraintBottom_toBottomOf="@id/monthText"
        android:layout_marginEnd="15.2dp"
        android:src="@drawable/last_month"
        android:id="@+id/monthLast"/>

    <ImageButton
        android:layout_width="8dp"
        android:layout_height="8dp"
        app:layout_constraintStart_toEndOf="@id/monthText"
        app:layout_constraintTop_toTopOf="@id/monthText"
        app:layout_constraintBottom_toBottomOf="@id/monthText"
        android:layout_marginStart="15.2dp"
        android:src="@drawable/next_month"
        android:id="@+id/monthNext"/>

    <ImageButton
        android:layout_width="19.2dp"
        android:layout_height="19.2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/monthText"
        app:layout_constraintBottom_toBottomOf="@id/monthText"
        android:layout_marginEnd="20dp"
        android:src="@drawable/close"
        android:id="@+id/toAlarm"/>

    <ImageButton
        android:layout_width="19.2dp"
        android:layout_height="19.2dp"
        app:layout_constraintEnd_toStartOf="@id/toAlarm"
        app:layout_constraintTop_toTopOf="@id/monthText"
        app:layout_constraintBottom_toBottomOf="@id/monthText"
        android:layout_marginEnd="9.6dp"
        android:src="@drawable/settlement_character"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:id="@+id/toBills"/>

    <ImageButton
        android:layout_width="19.2dp"
        android:layout_height="19.2dp"
        app:layout_constraintEnd_toStartOf="@id/toBills"
        app:layout_constraintTop_toTopOf="@id/monthText"
        app:layout_constraintBottom_toBottomOf="@id/monthText"
        android:layout_marginEnd="9.6dp"
        android:src="@drawable/close"
        android:id="@+id/toSearch"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="41.4dp"
        android:orientation="horizontal"
        android:id="@+id/calendarHeader"
        app:layout_constraintTop_toBottomOf="@id/toSearch">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일"
            android:textColor="@color/black_text"
            android:fontFamily="@font/suit_semibold"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/SUN"
            app:layout_constraintHorizontal_chainStyle="spread_inside"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="월"
            android:textColor="@color/black_text"
            android:fontFamily="@font/suit_semibold"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/MON"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="화"
            android:textColor="@color/black_text"
            android:fontFamily="@font/suit_semibold"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/TUE"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수"
            android:textColor="@color/black_text"
            android:fontFamily="@font/suit_semibold"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/WED"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="목"
            android:textColor="@color/black_text"
            android:fontFamily="@font/suit_semibold"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/THU"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="금"
            android:textColor="@color/black_text"
            android:fontFamily="@font/suit_semibold"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/FRI"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="토"
            android:textColor="@color/black_text"
            android:fontFamily="@font/suit_semibold"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/SAT"/>
    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainCalendar"
        app:layout_constraintTop_toBottomOf="@id/calendarHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/mainCalendar"
        android:layout_marginTop="40dp"
        android:text="6.11(일) 소비"
        android:background="@android:color/transparent"
        android:fontFamily="@font/suit_semibold"
        android:textSize="12.8dp"
        android:textColor="@color/black_text"
        android:id="@+id/spendingDay"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/spendingDay"
        app:layout_constraintBottom_toBottomOf="@id/spendingDay"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:text="내역추가"
        android:textSize="12.8dp"
        android:fontFamily="@font/suit_medium"
        android:background="@drawable/button_wfdefault"
        android:id="@+id/spendingPlus"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/spendingDay"
        android:layout_marginTop="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/dailySpendings"/>

</androidx.constraintlayout.widget.ConstraintLayout>