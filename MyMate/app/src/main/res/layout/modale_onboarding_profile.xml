<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/box_modale"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:behavior_draggable="false"
    app:behavior_fitToContents="true"
    android:elevation="10dp ">

    <ImageButton
        android:layout_width="11.2dp"
        android:layout_height="11.2dp"
        android:id="@+id/modaledismiss"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="31.5dp"
        android:layout_marginEnd="21.5dp"
        android:src="@drawable/close"
        android:scaleType="fitCenter"
        app:tint="@color/black"
        android:background="@android:color/transparent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="63dp"
        android:layout_marginStart="22.5dp"
        android:text="당신을 나타낼 캐릭터를 선택해 보세요"
        android:textColor="@color/black_text"
        android:textSize="14dp"
        android:fontFamily="@font/suit_semibold"
        android:id="@+id/bigText"/>

    <ImageView
        android:layout_width="53dp"
        android:layout_height="53dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bigText"
        app:layout_constraintEnd_toStartOf="@id/gridimg2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/gridimg1"
        android:src="@drawable/home_character"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>

    <ImageView
        android:layout_width="53dp"
        android:layout_height="53dp"
        app:layout_constraintStart_toEndOf="@id/gridimg1"
        app:layout_constraintTop_toTopOf="@id/gridimg1"
        app:layout_constraintBottom_toBottomOf="@id/gridimg1"
        app:layout_constraintEnd_toStartOf="@id/gridimg3"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/gridimg2"
        android:src="@drawable/settlement_character"/>

    <ImageView
        android:layout_width="53dp"
        android:layout_height="53dp"
        app:layout_constraintStart_toEndOf="@id/gridimg2"
        app:layout_constraintTop_toTopOf="@id/gridimg1"
        app:layout_constraintBottom_toBottomOf="@id/gridimg1"
        app:layout_constraintEnd_toStartOf="@id/gridimg4"
        android:layout_marginStart="10dp"
        android:id="@+id/gridimg3"
        android:src="@drawable/yellow_twinkle"/>

    <ImageView
        android:layout_width="53dp"
        android:layout_height="53dp"
        app:layout_constraintStart_toEndOf="@id/gridimg3"
        app:layout_constraintTop_toTopOf="@id/gridimg1"
        app:layout_constraintBottom_toBottomOf="@id/gridimg1"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:src="@drawable/green_twinkle"
        android:id="@+id/gridimg4"/>

    <ImageView
        android:layout_width="53dp"
        android:layout_height="53dp"
        app:layout_constraintTop_toBottomOf="@id/gridimg1"
        app:layout_constraintStart_toStartOf="@id/gridimg1"
        app:layout_constraintEnd_toEndOf="@id/gridimg1"
        android:layout_marginTop="12dp"
        android:src="@drawable/purple_twinkle"
        android:id="@+id/gridimg5"/>

    <ImageView
        android:layout_width="53dp"
        android:layout_height="53dp"
        app:layout_constraintTop_toBottomOf="@id/gridimg2"
        app:layout_constraintStart_toStartOf="@id/gridimg2"
        app:layout_constraintEnd_toEndOf="@id/gridimg2"
        android:layout_marginTop="12dp"
        android:src="@drawable/blue_twinkle"
        android:id="@+id/gridimg6"/>

    <ImageView
        android:layout_width="53dp"
        android:layout_height="53dp"
        app:layout_constraintTop_toBottomOf="@id/gridimg3"
        app:layout_constraintStart_toStartOf="@id/gridimg3"
        app:layout_constraintEnd_toEndOf="@id/gridimg3"
        android:layout_marginTop="12dp"
        android:src="@drawable/red_twinkle"
        android:id="@+id/gridimg7"/>

    <ImageView
        android:layout_width="53dp"
        android:layout_height="53dp"
        app:layout_constraintTop_toBottomOf="@id/gridimg4"
        app:layout_constraintStart_toStartOf="@id/gridimg4"
        app:layout_constraintEnd_toEndOf="@id/gridimg4"
        android:layout_marginTop="12dp"
        android:src="@drawable/basicprofile"
        android:id="@+id/gridimg8"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="43dp"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@id/gridimg5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/button_wfdefault"
        android:text="선택하기"
        android:textSize="14.5dp"
        android:textColor="@color/black_text"
        android:fontFamily="@font/suit_semibold"
        android:id="@+id/selectBtn"/>

</androidx.constraintlayout.widget.ConstraintLayout>