<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/box_modale"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:behavior_draggable="false"
    app:behavior_fitToContents="true"
    android:elevation="10dp">

    <ImageView
        android:layout_width="55dp"
        android:layout_height="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        android:src="@drawable/box_noradius"
        app:tint="@color/graylight_modaletop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="66dp"
        android:layout_marginStart="30dp"
        android:text="당신을 나타낼 캐릭터를 선택해 보세요"
        android:textColor="@color/black_text"
        android:textSize="20dp"
        android:fontFamily="@font/suit_bold"
        android:id="@+id/bigText"/>

    <ImageView
        android:layout_width="76dp"
        android:layout_height="76dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bigText"
        app:layout_constraintEnd_toStartOf="@id/gridimg2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/gridimg1"
        android:src="@drawable/button_selectedprofile"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintTop_toTopOf="@id/gridimg1"
        app:layout_constraintBottom_toBottomOf="@id/gridimg1"
        app:layout_constraintStart_toStartOf="@id/gridimg1"
        app:layout_constraintEnd_toEndOf="@id/gridimg1"
        android:id="@+id/gridmain1"
        android:src="@drawable/profile1"/>

    <ImageView
        android:layout_width="76dp"
        android:layout_height="76dp"
        app:layout_constraintStart_toEndOf="@id/gridimg1"
        app:layout_constraintTop_toTopOf="@id/gridimg1"
        app:layout_constraintBottom_toBottomOf="@id/gridimg1"
        app:layout_constraintEnd_toStartOf="@id/gridimg3"
