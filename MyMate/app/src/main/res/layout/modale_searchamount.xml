<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/box_modale"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:behavior_draggable="false"
    app:behavior_fitToContents="true"
    android:backgroundTint="@color/white"
    android:elevation="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/minimumedit"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="66dp"
        android:text="최소 "
        android:textColor="@color/black_text"
        android:fontFamily="@font/suit_medium"
        android:textSize="18dp"
        android:id="@+id/minimumheader"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/black_text"
        android:fontFamily="@font/suit_medium"
        android:hint="금액"
        android:textColorHint="@color/graylight_text"
        app:layout_constraintStart_toEndOf="@id/minimumheader"
        app:layout_constraintTop_toTopOf="@id/minimumheader"
        app:layout_constraintBottom_toBottomOf="@id/minimumheader"
        app:layout_constraintEnd_toStartOf="@id/minimumtail"
        android:id="@+id/minimumedit"
        android:layout_marginTop="1dp"
        android:background="@android:color/transparent"
        android:inputType="number"
        android:digits="0123456789"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="1.4dp"
        app:layout_constraintBottom_toBottomOf="@id/minimumedit"
        app:layout_constraintStart_toStartOf="@id/minimumedit"
        app:layout_constraintEnd_toEndOf="@id/minimumedit"
        android:src="@drawable/box_edittextunderline"
        app:tint="@color/graylight_buttonline"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/minimumheader"
        app:layout_constraintBottom_toBottomOf="@id/minimumheader"
        app:layout_constraintStart_toEndOf="@id/minimumedit"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black_text"
        android:textSize="18dp"
        android:text="원부터"
        android:fontFamily="@font/suit_medium"
        android:id="@+id/minimumtail"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/minimumheader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/maximumedit"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="15dp"
        android:text="최대 "
        android:textColor="@color/black_text"
        android:fontFamily="@font/suit_medium"
        android:textSize="18dp"
        android:id="@+id/maximumheader"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/black_text"
        android:fontFamily="@font/suit_medium"
        android:hint="금액"
        android:textColorHint="@color/graylight_text"
        app:layout_constraintStart_toEndOf="@id/maximumheader"
        app:layout_constraintTop_toTopOf="@id/maximumheader"
        app:layout_constraintBottom_toBottomOf="@id/maximumheader"
        app:layout_constraintEnd_toStartOf="@id/maximumtail"
        android:id="@+id/maximumedit"
        android:layout_marginTop="1dp"
        android:background="@android:color/transparent"
        android:inputType="number"
        android:digits="0123456789"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="1.4dp"
        app:layout_constraintBottom_toBottomOf="@id/maximumedit"
        app:layout_constraintStart_toStartOf="@id/maximumedit"
        app:layout_constraintEnd_toEndOf="@id/maximumedit"
        android:src="@drawable/box_edittextunderline"
        app:tint="@color/graylight_buttonline"
        android:id="@+id/maximumeditbottomline"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/maximumheader"
        app:layout_constraintBottom_toBottomOf="@id/maximumheader"
        app:layout_constraintStart_toEndOf="@id/maximumedit"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black_text"
        android:textSize="18dp"
        android:text="원까지"
        android:fontFamily="@font/suit_medium"
        android:id="@+id/maximumtail"/>
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintTop_toBottomOf="@id/maximumeditbottomline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="37dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/button_loginbardefault"
        android:text="선택"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:fontFamily="@font/suit_bold"
        android:id="@+id/amountset"
        android:elevation="0dp"
        android:stateListAnimator="@null"/>

</androidx.constraintlayout.widget.ConstraintLayout>