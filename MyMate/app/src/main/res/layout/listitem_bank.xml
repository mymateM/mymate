<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="13dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/top"/>

    <ImageView
        android:layout_width="67dp"
        android:layout_height="67dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top"
        android:src="@drawable/box_radius12"
        android:id="@+id/bankImageContainer"
        app:tint="@color/graylight_buttonfill"/>
    
    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:layout_constraintStart_toStartOf="@id/bankImageContainer"
        app:layout_constraintEnd_toEndOf="@id/bankImageContainer"
        app:layout_constraintTop_toTopOf="@id/bankImageContainer"
        app:layout_constraintBottom_toBottomOf="@id/bankImageContainer"
        android:id="@+id/bankImage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bankImageContainer"
        android:id="@+id/bankName"
        android:textColor="@color/black_text"
        android:text="하나은행"
        android:textSize="16dp"
        android:fontFamily="@font/suit_medium"
        android:layout_marginTop="7dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="13dp"
        app:layout_constraintTop_toBottomOf="@id/bankName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>