<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/subText"
        android:layout_marginBottom="16dp"
        android:text="해피하우스의\n가계부가 생겼어요!"
        android:textColor="@color/black_text"
        android:fontFamily="@font/happiness_sans_title"
        android:gravity="center"
        android:textSize="22dp"
        android:id="@+id/topText"/>

    <ImageView
        android:layout_width="278dp"
        android:layout_height="369dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="52dp"
        android:src="@drawable/onboarding_final"
        android:id="@+id/onboardCharacter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/onboardCharacter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="52dp"
        android:textSize="16dp"
        android:text="초대가 완료되면 알려드릴게요"
        android:textColor="@color/black_text70"
        android:fontFamily="@font/suit_medium"
        android:id="@+id/subText"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/onboardCharacter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="69dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:textColor="@color/white"
        android:text="홈으로 이동하기"
        android:textSize="18dp"
        android:fontFamily="@font/suit_bold"
        android:background="@drawable/box_radius50"
        android:backgroundTint="@color/purplemute_background"
        android:id="@+id/toHome"
        android:stateListAnimator="@null"/>

</androidx.constraintlayout.widget.ConstraintLayout>