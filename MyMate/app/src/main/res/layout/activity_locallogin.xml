<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="62.4dp"
        android:layout_marginStart="20dp"
        android:text="mymate ID 로그인"
        android:fontFamily="@font/suit_bold"
        android:textColor="@color/black_text"
        android:textSize="22dp"
        android:id="@+id/welcometxt"/>
    
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/welcometxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="44.8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/localloginid"
        android:backgroundTint="@color/graylight_basic"
        android:textColorHighlight="@color/purplevivid_graph"
        android:hint="아이디"
        android:fontFamily="@font/suit_semibold"
        android:textSize="20dp"
        android:textColorHint="@color/graydark_text"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/localloginid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/localloginpwd"
        android:backgroundTint="@color/graylight_basic"
        android:textColorHighlight="@color/purplevivid_graph"
        android:hint="비밀번호"
        android:fontFamily="@font/suit_semibold"
        android:textSize="20dp"
        android:textColorHint="@color/graydark_text"
        android:inputType="textPassword"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintTop_toBottomOf="@id/localloginpwd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="52.8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="로그인"
        android:textColor="@color/whitemute"
        android:fontFamily="@font/suit_semibold"
        android:textSize="14.4dp"
        android:background="@drawable/button_loginbardefault"
        android:backgroundTint="@color/graylight_wireframe"
        android:id="@+id/localloginbutton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/localloginbutton"
        android:layout_marginTop="42dp"
        android:text="비밀번호 찾기"
        android:textSize="16dp"
        android:fontFamily="@font/suit_regular"
        android:textColor="@color/black_text"
        android:id="@+id/localpwdfindbtn"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/localpwdfindbtn"
        android:layout_marginTop="24dp"
        android:text="아직 계정이 없으신가요?"
        android:textColor="@color/graydark_text"
        android:textSize="16dp"
        android:fontFamily="@font/suit_regular"
        android:id="@+id/localaccquestion"/>

</androidx.constraintlayout.widget.ConstraintLayout>