<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="5dp"
        android:layout_height="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/graph_graybackground"
        app:tint="@color/graylight_tabtext"
        android:id="@+id/onboardIndi1"/>

    <ImageView
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:id="@+id/onboardIndi2"
        app:layout_constraintTop_toTopOf="@id/onboardIndi1"
        app:layout_constraintStart_toEndOf="@id/onboardIndi1"
        app:layout_constraintBottom_toBottomOf="@id/onboardIndi1"
        android:layout_marginStart="6.4dp"
        android:src="@drawable/graph_graybackground"
        app:tint="@color/graylight_tabtext"/>

    <ImageView
        android:layout_width="27dp"
        android:layout_height="5dp"
        android:id="@+id/onboardIndi3"
        app:layout_constraintTop_toTopOf="@id/onboardIndi2"
        app:layout_constraintStart_toEndOf="@id/onboardIndi2"
        app:layout_constraintBottom_toBottomOf="@id/onboardIndi2"
        android:layout_marginStart="6.4dp"
        android:src="@drawable/graph_graybackground"
        app:tint="@color/purplevivid_graph"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/onboardIndi1"
        app:layout_constraintBottom_toBottomOf="@id/onboardIndi1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:text="이전으로"
        android:textSize="11.2dp"
        android:fontFamily="@font/suit_regular"
        android:textColor="@color/black_text"
        android:id="@+id/backbtn"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/black_text"
        android:textSize="18dp"
        android:text="가계부를 함께 할\n나의 메이트를 초대해 볼까요?"
        android:fontFamily="@font/suit_semibold"
        android:id="@+id/topText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topText"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        android:text="초대를 통해 가계부를 시작해 보세요"
        android:fontFamily="@font/suit_medium"
        android:textColor="@color/graylight_tabtext"
        android:id="@+id/subText"/>
    
    <Button
        android:layout_width="0dp"
        android:layout_height="46.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/inviteBtn"
        android:background="@drawable/box_modalebutton"
        android:backgroundTint="@color/graylight_tabtext"
        android:text="초대 받았어요"
        android:textColor="@color/black_text"
        android:textSize="14dp"
        android:fontFamily="@font/suit_bold"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="23dp"
        android:id="@+id/invitedBtn"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="46.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/invitedBtn"
        android:background="@drawable/box_modalebutton"
        android:backgroundTint="@color/black_text"
        android:text="초대 할래요"
        android:textColor="@color/whitemute"
        android:textSize="14dp"
        android:fontFamily="@font/suit_bold"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="23dp"
        android:id="@+id/inviteBtn"/>

</androidx.constraintlayout.widget.ConstraintLayout>