<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="113dp"
        android:text="반가워요!\n평화로운 공동가계부,\n지금 바로 시작해보세요"
        android:fontFamily="@font/happiness_sans_title"
        android:textSize="22dp"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/black_text"
        android:id="@+id/logintext"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="65dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/logintext"
        android:layout_marginTop="30.12dp"
        android:background="@drawable/button_loginbardefault"
        android:backgroundTint="@color/purpleblue_select"
        android:text="mymate ID로 시작하기"
        android:textColor="@color/white"
        android:fontFamily="@font/suit_semibold"
        android:textSize="18dp"
        android:id="@+id/locallogin"/>

    <ImageView
        android:layout_width="18dp"
        android:layout_height="17dp"
        app:layout_constraintTop_toTopOf="@id/locallogin"
        app:layout_constraintBottom_toBottomOf="@id/locallogin"
        app:layout_constraintStart_toStartOf="@id/locallogin"
        android:layout_marginStart="25dp"
        android:scaleType="centerInside"
        android:src="@drawable/login_mymate"
        android:elevation="10dp"
        android:outlineProvider="none"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/locallogin"
        android:layout_marginTop="20dp"
        android:id="@+id/kakaologin"
        android:outlineProvider="none"
        android:background="@drawable/button_loginbardefault"
        android:backgroundTint="@color/kakaomain"
        android:fontFamily="@font/suit_semibold"
        android:textSize="18dp"
        android:textColor="@color/black_text"
        android:text="카카오로 시작하기"/>

    <ImageView
        android:layout_width="18dp"
        android:layout_height="17dp"
        app:layout_constraintTop_toTopOf="@id/kakaologin"
        app:layout_constraintBottom_toBottomOf="@id/kakaologin"
        app:layout_constraintStart_toStartOf="@id/kakaologin"
        android:layout_marginStart="25dp"
        android:scaleType="centerInside"
        android:src="@drawable/login_kakao"
        android:elevation="10dp"
        android:outlineProvider="none"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/kakaologin"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/naverlogin"
        android:backgroundTint="@color/navermain"
        android:background="@drawable/button_loginbardefault"
        android:layout_marginTop="20dp"
        android:outlineProvider="none"
        android:fontFamily="@font/suit_semibold"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:text="네이버로 시작하기"/>

    <ImageView
        android:layout_width="18dp"
        android:layout_height="17dp"
        app:layout_constraintTop_toTopOf="@id/naverlogin"
        app:layout_constraintBottom_toBottomOf="@id/naverlogin"
        app:layout_constraintStart_toStartOf="@id/naverlogin"
        android:layout_marginStart="25dp"
        android:scaleType="centerInside"
        android:src="@drawable/login_naver"
        android:elevation="10dp"
        android:outlineProvider="none"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="65dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/naverlogin"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/googlelogin"
        android:backgroundTint="@color/googlemain"
        android:background="@drawable/button_loginbardefault"
        android:outlineProvider="none"
        android:fontFamily="@font/suit_semibold"
        android:textSize="18dp"
        android:textColor="@color/black_text"
        android:text="구글로 시작하기"/>

    <ImageView
        android:layout_width="18dp"
        android:layout_height="17dp"
        app:layout_constraintTop_toTopOf="@id/googlelogin"
        app:layout_constraintBottom_toBottomOf="@id/googlelogin"
        app:layout_constraintStart_toStartOf="@id/googlelogin"
        android:layout_marginStart="25dp"
        android:scaleType="centerInside"
        android:src="@drawable/login_google"
        android:elevation="10dp"
        android:outlineProvider="none"/>

</androidx.constraintlayout.widget.ConstraintLayout>