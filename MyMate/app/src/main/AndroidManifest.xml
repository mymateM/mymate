<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.mymate">
    <!-- permit application to use internet -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyMate"
        tools:targetApi="31">
        <meta-data
            android:name="com.google.firebase.ml.vision.DEPENDENCIES"
            android:value="ocr" />
        <activity
            android:name=".OnboardingProfileActivity"
            android:exported="false"
            android:label="@string/title_activity_onboarding_profile"
            android:theme="@style/Theme.MyMate" />
        <activity android:name=".OnboardingSettlementdayActivity"
            android:exported="false"
            android:theme="@style/Theme.MyMate"/>
        <activity android:name=".OnboardingAccountActivity"
            android:exported="false"
            android:theme="@style/Theme.MyMate"/>
        <activity android:name=".OnboardingInviteActivity"
            android:exported="false"
            android:theme="@style/Theme.MyMate"/>
        <activity android:name=".OnboardingToinviteActivity"
            android:exported="false"
            android:theme="@style/Theme.MyMate"/>
        <activity android:name=".OnboardingGetinviteActivity"
            android:exported="false"
            android:theme="@style/Theme.MyMate"/>
        <activity android:name=".OnboardingHouseholdActivity"
            android:exported="false"
            android:theme="@style/Theme.MyMate"/>
        <activity android:name=".OnboardingSettlementbudgetActivity"
            android:exported="false"
            android:theme="@style/Theme.MyMate"/>
        <activity android:name=".OnboardingCreatedActivity"
            android:exported="false"
            android:theme="@style/Theme.MyMate"/>
        <activity
            android:name=".AlarmActivity"
            android:exported="false"
            android:theme="@style/Theme.MyMate" />
        <activity
            android:name=".SettlementActivity"
            android:exported="false"
            android:theme="@style/Theme.MyMate" />
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.MyMate" />
        <activity
            android:name=".LocalLoginActivity"
            android:exported="false"
            android:theme="@style/Theme.MyMate" />
        <activity
            android:name=".LocalJoinActivity"
            android:exported="false"
            android:theme="@style/Theme.MyMate" />
        <activity android:name=".BillManagerActivity"
            android:exported="false"
            android:theme="@style/Theme.MyMate"/>
        <activity android:name=".BillCameraActivity"
            android:exported="false"
            android:theme="@style/Theme.MyMate"
            android:screenOrientation="landscape"/>
        <activity android:name=".BillOCRActivity"
            android:exported="false"
            android:theme="@style/Theme.MyMate"/>
        <activity android:name=".BillManagerListActivity"
            android:exported="false"
            android:theme="@style/Theme.MyMate"/>
        <activity android:name=".BillDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.MyMate"/>
        <activity android:name=".LocalJoinEmailActivity"
            android:theme="@style/Theme.MyMate"
            android:exported="false"/>
        <activity android:name=".LocalJoinPwdActivity"
            android:exported="false"
            android:theme="@style/Theme.MyMate"/>
        <activity android:name=".OnboardingTermsActivity"
            android:theme="@style/Theme.MyMate"
            android:exported="false"/>
        <activity android:name=".BillImageActivity"
            android:exported="false"
            android:theme="@style/Theme.MyMate"/>
        <activity android:name=".SearchActivity"
            android:exported="false"
            android:theme="@style/Theme.MyMate"/>
        <activity android:name=".BillDetailOCRActivity"
            android:exported="false"
            android:theme="@style/Theme.MyMate"/>
        <activity android:name=".BillDeleteActivity"
            android:theme="@style/Theme.MyMate"
            android:exported="false"/>
        <activity android:name=".BillAddActivity"
            android:exported="false"
            android:theme="@style/Theme.MyMate"/>
        <activity android:name=".BillAddMemoActivity"
            android:theme="@style/Theme.MyMate"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".BillAddMemoOCRActivity"
            android:theme="@style/Theme.MyMate"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".SpendingAddActivity"
            android:theme="@style/Theme.MyMate"
            android:exported="false"/>
        <activity android:name=".SpendingAddStoreActivity"
            android:exported="false"
            android:theme="@style/Theme.MyMate"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".SpendingAddMemoActivity"
            android:theme="@style/Theme.MyMate"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".SpendingDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.MyMate"/>
        <activity
            android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Redirect URI: "kakao${NATIVE_APP_KEY}://oauth" -->
                <data
                    android:host="oauth"
                    android:scheme="@string/kakao_native_app_key_manifest" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.MyMate">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>